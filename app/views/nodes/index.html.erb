<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Your custom nodelist URL for OsiriX</h3>
  </div>
  <div class="panel-body">
    <code>
      <%= plist_url(current_user.api_key) %>
    </code>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Port</th>
      <th>Aetitle</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @nodes.each do |node| %>
      <tr>
        <td><%= node.name %></td>
        <td><%= node.address %></td>
        <td><%= node.port %></td>
        <td><%= node.aetitle %></td>
        <td><%= link_to 'Edit', edit_node_path(node) %></td>
        <td><%= link_to 'Delete', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Node', new_node_path %>
